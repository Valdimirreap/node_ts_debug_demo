{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current TS File",
            "type": "node",
            "request": "launch",
            "args": [
               // "${relativeFile}"
               "${workspaceRoot}/Index.ts" // 入口文件
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "/usr/local/lib/node_modules/ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "outFiles": [
             //   "${workspaceFolder}/build/*.js"
            ],
        }
    ]
}